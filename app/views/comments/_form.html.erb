# create a comment form partial so users can submit new comments on a post

<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter%> <br />
		<%= f.text_field :commenter %>
	</p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>